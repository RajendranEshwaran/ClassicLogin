<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainmenuActivity">

    <View
        android:id="@+id/view3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.CardView

        app:cardElevation="3dp"
        android:layout_margin="25dp"
        app:cardUseCompatPadding="true"
        android:layout_width="380dp"
        android:layout_height="700dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <!-- row 1 col 1 -->
        <RelativeLayout
            android:layout_marginTop="50dp"
            android:layout_width="150dp"
            android:layout_height="150dp">

            <ImageView
                android:id="@+id/cardImg"
                android:onClick="setCardClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_red_dark"
                android:src="@drawable/card3" />
        </RelativeLayout>
        <!-- row 1 col 2 -->
        <RelativeLayout
            android:layout_marginTop="50dp"
            android:layout_marginLeft="200dp"
            android:layout_width="150dp"
            android:layout_height="150dp">

            <ImageView
                android:id="@+id/noteImg"
                android:onClick="setNoteClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_red_dark"
                android:src="@drawable/note" />
        </RelativeLayout>


        <!-- row 2 col 1 -->
        <RelativeLayout
            android:layout_marginTop="250dp"
            android:layout_width="150dp"
            android:layout_height="150dp">

            <ImageView
                android:id="@+id/ordersImg"
                android:onClick="setOrdersClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_red_dark"
                android:src="@drawable/orders" />
        </RelativeLayout>
        <!-- row 2 col 2 -->
        <RelativeLayout
            android:layout_marginLeft="200dp"
            android:layout_marginTop="250dp"
            android:layout_width="150dp"
            android:layout_height="150dp">

            <ImageView
                android:id="@+id/pharImg"
                android:onClick="setPharClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_red_dark"
                android:src="@drawable/phar" />
        </RelativeLayout>

        <!-- row 3 col 1 -->
        <RelativeLayout
            android:layout_marginTop="450dp"
            android:layout_width="150dp"
            android:layout_height="150dp">

            <ImageView
                android:id="@+id/profileImg"
                android:onClick="setProfieClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_red_dark"
                android:src="@drawable/profile" />
        </RelativeLayout>

        <!-- row 3 col 2 -->
        <RelativeLayout
            android:layout_marginLeft="200dp"
            android:layout_marginTop="450dp"
            android:layout_width="150dp"
            android:layout_height="150dp">

            <ImageView
                android:id="@+id/chatImg"
                android:onClick="setChatClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_red_dark"
                android:src="@drawable/chat" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>